<link rel="stylesheet" href="/stylesheets/tracks.css">

<header class="container">
  <h1>Tracks</h1>
  <a href="/tracks/new">Post a new track!</a>
</header>

<section class="container">

  <div class="row">
    <% @tracks.each do |track| %>
      <div class="track col-md-4 col-sm-6 col-xs-12">

        <img src="<%= track.picture_url %>"/>
        <h3><a href="/tracks/<%= track.id %>"><%= track.title %></a> <small>(by: <%= track.author %>)</small></h3>
        <p>
          <a href="/tracks/<%= track.id %>"><%= track.song_url %></a>
        </p>
        <p>
          posted by: <a href="/users/<%= track.user_id %>"><%= User.find(track.user_id).username %></a>
        </p>
      </div>
    <% end %>
  </div>

</section>