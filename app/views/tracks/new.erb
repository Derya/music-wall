<link rel="stylesheet" href="/stylesheets/new.css">

<% if @track.errors.any? %>
  <div>
    <strong>Some issues with your track, please fix them:</strong>
    <ul>
      <% @track.errors.full_messages.each do |track| %>
        <li><%= track %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<form method="post" action="/tracks">

  <div>
    <label>Title:</label>
    <input type="text" name="title" value="<%= @track.title %>">
  </div>

  <div>
    <label>Author:</label>
    <input type="text" name="author" value="<%= @track.author %>">
  </div>

  <div>
    <label>URL:</label>
    <input type="text" name="song_url" value="<%= @track.song_url %>">
  </div>

  <div>
    <label>Picture URL:</label>
    <input type="text" name="picture_url" value="<%= @track.picture_url %>">
  </div>

  <div>
    <input type="submit" value="Submit">
  </div>

</form>


<hr/>
<a href="/tracks">Back to All Tracks</a>